<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PKipinskiHelloWorld2.BmiCalculator">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="weightEntry" Placeholder="Waga w kg" HorizontalTextAlignment="Center" Keyboard="Numeric"/>
            <Entry x:Name="heightEntry" Placeholder="Wzrost w cm" HorizontalTextAlignment="Center" Keyboard="Numeric"/>
            <Button Text="Oblicz" Clicked="CalculateBmi" FontSize="Large"/>
            <Image x:Name="bmiImage" Source="healthy.png"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>