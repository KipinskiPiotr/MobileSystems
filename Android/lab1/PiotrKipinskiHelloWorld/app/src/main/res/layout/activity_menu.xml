<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/run_test_actions_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Run test actions activity"
        android:onClick="runTestActionsActivity"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/run_how_many_fingers_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Run how many fingers activity"
        android:onClick="runHowManyFingersActivity"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/run_dices_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Run dices activity"
        android:onClick="runDicesActivity"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/run_bmi_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Run BMI activity"
        android:onClick="runBmiActivity"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/run_linear_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Show flower list"
        android:onClick="runListActivity"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/user_value_to_be_passed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="Type something"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Pass data to another activity"
        android:onClick="runActivityAndPassValue"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/sp_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="Type something"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Write to SP"
        android:onClick="spWriteTo"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Read from SP"
        android:onClick="spReadFrom"
        android:textSize="20sp"
        android:textStyle="bold"/>
</LinearLayout>