<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        android:gravity="center"
        android:hint="Result will be displayed here"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/instructions_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:hint="Type the number you think I've chosen"
        android:textSize="25sp"
        android:background="@android:color/holo_red_dark"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:hint="Type your number"
        android:textSize="20sp"
        android:inputType="number"/>

    <Button
        android:id="@+id/play_the_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Play the game"
        android:onClick="playTheGame"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>